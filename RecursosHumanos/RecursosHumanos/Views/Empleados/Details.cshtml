@model RecursosHumanos.Models.Empleados

@{
    ViewBag.Title = "Details";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
@Styles.Render("~/Content/estilos.css")

<div class="contenedor-modulo contenedor">
    <h2 class="margin">Detalles</h2>
    <div class="contenedor-campos">
        <fieldset class="borde margin">

            <legend>Información Personal</legend>

            <div class="campo">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Nombre)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Apellido)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Telefono)
                </div>
            </div>

        </fieldset>

        <fieldset class="borde margin">

            <legend>Información Empresarial</legend>

            <div class="campo">
                @Html.LabelFor(model => model.Codigo_Empleado, htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Codigo_Empleado)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Departamento, "Departamento", htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Departamento1.Nombre)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Cargo, "Cargo", htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.cargo1.Cargo1)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Salario, htmlAttributes: new { @class = "label" })
                <div class="info">
                    RD$ @Html.DisplayFor(model => model.Salario)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Fecha_De_Ingreso, htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Fecha_De_Ingreso)
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Estatus, htmlAttributes: new { @class = "label" })
                <div class="info">
                    @Html.DisplayFor(model => model.Estatus, new { @class="info"})
                </div>
            </div>

        </fieldset>

        <div class="opciones">
            <a href="@Url.Action("Index")" class="boton"><i class="fas fa-chevron-left"></i> Volver</a>
            <a style="margin-right:0!important" href="@Url.Action("Edit", new { id = Model.ID })" class="boton"><i class="fas fa-user-edit"></i> Editar</a>
        </div><!--OPCIONES-->
    </div>
</div>








  