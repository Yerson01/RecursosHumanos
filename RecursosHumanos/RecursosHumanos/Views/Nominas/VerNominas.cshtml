@model IEnumerable<RecursosHumanos.Models.Nomina>
@{
    ViewBag.Title = "VerNominas";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
@Styles.Render("~/Content/estilos.css")

<div class="contenedor-modulo contenedor">
    <h2 class="margin">Nóminas</h2>

    <div class="contenedor-tablas">
        <table class="table">
            <tr class="tabla-header">
                <th>
                    @Html.DisplayNameFor(model => model.Monto_Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Año)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="tabla-body">
                    <td>
                        RD$ @Html.DisplayFor(modelItem => item.Monto_Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Año)
                    </td>
                </tr>
            }
        </table>
        <div class="opciones">
            <a href="@Url.Action("Informes", "Home")" class="boton"><i class="fas fa-chevron-left"></i> Volver</a>
        </div><!--OPCIONES-->
    </div>
</div>


