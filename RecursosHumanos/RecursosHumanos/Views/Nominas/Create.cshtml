@model RecursosHumanos.Models.Nomina

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
@Styles.Render("~/Content/estilos.css")

<div class="contenedor-modulo contenedor">
    <h2 class="margin">Completa los campos del formulario</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="contenedor-campos">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset class="borde margin">

            <legend>Información de la nómina</legend>

            <div class="campo">
                @Html.LabelFor(model => model.Monto_Total, htmlAttributes: new { @class = "label" })
                <div class="entrada">
                    @Html.EditorFor(model => model.Monto_Total, new { htmlAttributes = new { @class = "campo-texto" } })
                    @Html.ValidationMessageFor(model => model.Monto_Total, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Dia, htmlAttributes: new { @class = "label" })
                <div class="entrada">
                    @Html.EditorFor(model => model.Dia, new { htmlAttributes = new { @class = "campo-texto" } })
                    @Html.ValidationMessageFor(model => model.Dia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Mes, htmlAttributes: new { @class = "label" })
                <div class="entrada">
                    @Html.EditorFor(model => model.Mes, new { htmlAttributes = new { @class = "campo-texto" } })
                    @Html.ValidationMessageFor(model => model.Mes, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="campo">
                @Html.LabelFor(model => model.Año, htmlAttributes: new { @class = "label" })
                <div class="entrada">
                    @Html.EditorFor(model => model.Año, new { htmlAttributes = new { @class = "campo-texto" } })
                    @Html.ValidationMessageFor(model => model.Año, "", new { @class = "text-danger" })
                </div>
            </div>

        </fieldset>

        <div class="opciones">
            <a href="@Url.Action("Index")" class="boton"><i class="fas fa-user-times"></i> Cancelar</a>
            <button type="submit" class="boton"><i class="fas fa-user-plus"></i> Añadir</button>
        </div><!--OPCIONES-->
    </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
